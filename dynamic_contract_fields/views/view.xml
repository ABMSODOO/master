<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_add_fields" model="ir.ui.view">
            <field name="name">Add Fields</field>
            <field name="model">dynamic.field</field>
            <field name="arch" type="xml">
                <form string="Custom Fields">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="complete_name"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="add_field" string="Add Field" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_dynamic_fields" model="ir.actions.act_window">
            <field name="name">Add Fields</field>
            <field name="res_model">dynamic.field</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_add_fields"/>
            <field name="target">new</field>
        </record>

        <record id="hr_contract_form_inherit_dynamic_fields" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit.dynamic_fields</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="%(action_dynamic_fields)d" type="action" string="Add field" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

</odoo>